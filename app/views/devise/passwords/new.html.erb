<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'reg-page' }) do |f| %>
<%= f.error_notification %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
    <div class="reg-header">
      <h2>Forgot your password?</h2>
    </div>
    <div class="input-group margin-bottom-20">
      <span class="input-group-addon"><i class="fa fa-user"></i></span>
      <%= f.text_field :email, required: true, class: 'form-control', placeholder: I18n.t("email"), autofocus: true %>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.button :submit, "Reset my password", class: 'btn-u pull-right' %>
      </div>
    </div>
    <hr>
    <%= render "devise/shared/links" %>
  </div>
</div><!--/row-->
<% end %>
