<%= simple_form_for(@organization, class: "reg-page") do |f| %>

  <div class="reg-header">
    <h2><%= I18n.t 'orga.register_title' %></h2>
    <p><%= raw I18n.t('orga.register_link', link: link_to(I18n.t("orga.login"), new_orga_member_session_path)) %></p>
  </div>
  <% @orga_member.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end unless @orga_member.nil? or @orga_member.errors.empty?%>
  <% @organization.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end%>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>

    <%= f.simple_fields_for @orga_member do |b| %>
      <%= b.input :email, required: true, as: :email %>
      <%= b.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= b.input :password_confirmation, required: true %>
    <% end unless @orga_member.nil? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
